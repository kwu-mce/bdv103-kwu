{
    "entryFile": "src/index.ts",
    "noImplicitAdditionalProperties": "throw-on-extras",
    "controllerPathGlobs": ["src/**/*Controller.ts"],
    "spec": {
      "outputDirectory": "build",
      "specVersion": 3
    },
    "routes": {
      "routesDir": "build",
      "middleware": "koa"
    },
    "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@controllers/*": ["src/controllers/*"]
    }
  }
}